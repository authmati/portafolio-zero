---
let navItems = [
  { href: "/#inicio", alt: "Inicio", text: "Inicio" },

  { href: "/#proyectos", alt: "Proyectos", text: "Proyectos" },

  { href: "/#experiencia", alt: "Experiencia", text: "Experiencia" },

  { href: "/#educacion", alt: "Educación", text: "Educación" },

  { href: "/#certificados", alt: "Certificados", text: "Certificados" },
];
---

<div
  class="fixed bottom-0 p-5 z-10 flex items-center justify-center w-full mx-auto"
>
  <nav
    class="flex gap-1 rounded-xl justify-center items-center border border-neutral-700 backdrop-blur-md bg-neutral-900/30"
  >
    {
      navItems.map((link) => (
        <a
          href={link.href}
          href={link.alt}
          class="py-2 px-4 rounded-xl hover:text-neutral-50 hover:bg-neutral-800/50 opacity-80 duration-150 hover:opacity-100"
        >
          {link.text}
        </a>
      ))
    }
  </nav>
</div>
