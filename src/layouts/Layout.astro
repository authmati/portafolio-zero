---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio hecho desde cero con Astro." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>

		<Navbar />

		<main class="p-5 mt-4 w-full mx-auto flex flex-col gap-6 md:max-w-4xl">
			<slot/>
		</main>

		<Footer />
		
	</body>
</html>
<style is:global>
	:root {
		color-scheme: dark;
	}
	
	html {
		font-family: system-ui, sans-serif;
		background: gray;
	}

</style>
